{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1>Auteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Noms</th>
                <th>Prenoms</th>
                <th>Adresse</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.noms }}</td>
                <td>{{ auteur.prenoms }}</td>
                <td>{{ auteur.adresse }}</td>
                <td>{{ auteur.mail }}</td>
                <td>{{ auteur.phone }}</td>
                <td>
                    <a href="{{ path('app_auteur_affichage', {'id': auteur.id}) }}">affich</a>
                    <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_auteur_new') }}">Create new</a>
{% endblock %}
